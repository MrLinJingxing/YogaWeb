.box {
  min-height: 100vh;
  height: auto;
  width: 100%;
  background-color: #eee;
  padding: 30rpx;
  box-sizing: border-box;
}
.card {
  width: 100%;
  padding: 25rpx 30rpx;
  border-radius: 20rpx;
  background-color: #fff;
  box-sizing: border-box;
}
.title {
  font-weight: 700;
  padding-bottom: 28rpx;
  border-bottom: 1rpx solid #eee;
}
.main input {
  /* border: 1rpx solid #444; */
  padding-left: 10rpx;
  height: 80rpx;
  width: 90%;
}

.input {
  font-size: 34rpx;
  margin-top: 20rpx;
  border: 1rpx solid #444;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-radius: 10rpx;
}
.icon {
  width: 10%;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.icon image {
  height: 50rpx;
  width: 50rpx;
}
.line {
  height: 80rpx;
  line-height: 80rpx;
  margin-top: 20rpx;
  border: 1rpx solid #444;
  padding-left: 10rpx;
  color: #666;
  font-size: 35rpx;
}
.button {
  margin-top: 20rpx;
}

/* 复选框 */
.page-section {
  background-color: rgb(145, 68, 68);
  padding: 35rpx;
  width: 100%;
  
}
.weui-cell {
  display: flex;
  flex-direction: row;
  line-height: 80rpx;
  width: 100%;
  background-color: #fff;
  padding: 0 35rpx;
  box-sizing: border-box;
  border-top: 1rpx solid #eee;
}
#width {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding-right: 20rpx;
}
#width image {
  width: 50rpx;
  height: 50rpx;
}
/* 折叠 */
.li {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.li button {
  padding: 0 0 0 10rpx;
  text-align: left;
  line-height: 80rpx;
  color: #666;
  font-weight: 400;
}
.li2 {
  width: 100%;
}

/* 发卡记录 */
.record {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  padding: 25rpx 30rpx;
  border-radius: 20rpx;
  background-color: #fff;
  box-sizing: border-box;
  margin-top: 30rpx;
}