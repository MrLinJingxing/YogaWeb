<view class="box">
  <view class="header"> 
    <block wx:if="{{!hasUserInfo}}">
      <view class="portrait" bindtap="getUserProfile">
        <open-data type="userAvatarUrl" default-avatar="http://434540.s81i.faiusr.com/2/101/AFEI7MIaEAIYACDrqc3jBSjqpfT6AjDuBTjoAkBl.jpg"></open-data>
      </view>
      <text>请点击登录</text>
    </block>
    <block wx:elif="{{hasUserInfo}}">
      <view class="portrait" bindtap="getUserProfile">
        <image class="portrait" src="{{userInfo.avatarUrl}}"></image>
      </view>
      <text>{{userInfo.nickName}}</text>
    </block>
  </view>
  <view class="content">
    <view class="top">
        <view class="block" bindtap="show">
          <view>团课</view>
          <view>0</view>
        </view>
        <view class="block" bindtap="show">
          <view>vip班</view>
          <view>0</view>
        </view>
        <view class="block" bindtap="show">
          <view>私教</view>
          <view>0</view>
        </view>
    </view>
    <view class="centre">
      <view class="centre-1">
        <view>个人信息</view>
        <view>></view>
      </view>
      <view class="centre-1" bindtap="getvip">
        <view>会员卡</view>
        <view>></view>
      </view>
      <view>
        <view>订单</view>
        <view>></view>
      </view>
    </view>
    <view class="bottom">
      <view class="bottom-1">
        <view class="img"><image mode="widthFix" src="../img/addr.png"></image>地址</view>
        <view>></view>
      </view>
      <view class="bottom-1">
        <view class="img"><image mode="widthFix" src="../img/phone.png"></image>电话</view>
        <view>></view>
      </view>
      <view>
        <view class="img"><image mode="widthFix" src="../img/time.png"></image>运营时间</view>
        <view>></view>
      </view>
    </view>
  </view>
</view>