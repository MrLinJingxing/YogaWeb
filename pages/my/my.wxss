.box {
  background-color: #e6e6e6;
  width: 100%;
  height: 1200rpx;
  box-sizing: border-box;
}
.header {
  width: 180%;
  height: 600rpx;
  position: relative;
  left: -40%;
  top: -100rpx;
  border-radius: 0 0 45% 45%;
  overflow: hidden;
  cursor: pointer;
  background-color: rgb(51,51,51);
  color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.portrait {
  width: 180rpx;
  height: 180rpx;
  overflow: hidden;
  border-radius: 50%;
  border: 1rpx solid #fafafa;
}
.header text {
  margin-top: 20rpx;
  font-size: 35rpx;
}
.content {
  position: relative;
  top: -250rpx;
}
.top {
  width: 80%;
  margin: 0 auto;
  padding: 20rpx 25rpx;
  background-color: #fff;
  border-radius: 15rpx;
}
.top {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.block {
  width: 150rpx;
  height: 150rpx;
  background-color: #fff;
  border-radius: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border: 6rpx solid #f5f5f5;
}
.centre {
  width: 80%;
  margin: 25rpx auto 0;
  padding: 0rpx 25rpx;
  background-color: #fff;
  border-radius: 15rpx;
}
.centre>view {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  height: 95rpx;
}
.centre-1 {
  border-bottom: 1px solid #f5f5f5;
}

.bottom {
  width: 80%;
  margin: 25rpx auto 25rpx;
  padding: 0rpx 25rpx;
  background-color: #fff;
  border-radius: 15rpx;
}
.bottom>view {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  height: 95rpx;
}
.bottom-1 {
  border-bottom: 1px solid #f5f5f5;
}
.bottom image {
  width: 35rpx;
  margin-right: 15rpx;
}
.img {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}