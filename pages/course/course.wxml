<view class="swiper-tab">
  <view class="swiper-tab-item {{currentTab==0?'active':''}}" data-current="0" bindtap="clickTab">团课</view>
  <view class="swiper-tab-item {{currentTab==1?'active':''}}" data-current="1" bindtap="clickTab">vip班</view>
  <view class="swiper-tab-item {{currentTab==2?'active':''}}" data-current="2" bindtap="clickTab">私教</view>
</view>

<swiper current="{{currentTab}}" bindchange="swiperTab">
  <block wx:for="{{tabs}}" wx:key="name">
    <swiper-item>
      <view class='block1'>
        <text>{{item.name}}</text>
      </view>
    </swiper-item>
  </block>
</swiper>