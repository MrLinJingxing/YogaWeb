.box {
  width: 100%;
  padding: 25rpx 50rpx;
  background-color: #fff;
  border-top: 20rpx solid #eee;
  border-bottom: 20rpx solid #eee;
  box-sizing: border-box;
  border-radius: 10rpx;
}

.line {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.height {
  height: 88rpx;
  line-height: 88rpx;
}
.line input {
  border: 1rpx solid #444;
  border-radius: 10rpx;
  width: 344rpx;
  height: 70rpx;
  padding-left: 5rpx;
  box-sizing: border-box;
  text-align: center;
}

/* 下拉列表 */
.select_box {
  border: 1rpx solid #444;
  width: 344rpx;
  margin: 30rpx auto;
  position: relative;
  border-radius: 10rpx;
  text-align: center;
}

.select {
  box-sizing: border-box;
  width: 100%;
  height: 70rpx;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  border-radius: 10rpx;
  box-sizing: border-box;
}

.select_text {
  font-size: 30rpx;
  flex: 1;
}

.select_img {
  width: 40rpx;
  height: 40rpx;
  display: block;
  transition: transform 0.3s;
}

.select_img_rotate {
  transform: rotate(180deg);
}

.option_box {
  position: absolute;
  top: 70rpx;
  width: 100%;
  box-sizing: border-box;
  height: 0;
  overflow-y: auto;
  border-top: 0;
  background: #fff;
  transition: height 0.3s;
  z-index: 999;
}

.option {
  display: block;
  line-height: 40rpx;
  font-size: 30rpx;
  border-bottom: 1rpx solid #444;
  padding: 10rpx;
  z-index: 999;
}

/* 选择器 */
.line button {
  font-weight: 400;
}

#width {
  width: 344rpx;
  padding: 0;
  height: 70rpx;
  line-height: 70rpx;
}

/* 打分 */
.iine-difficulty {
  width: 50%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.star-image {
  width: 47rpx;
  height: 47rpx;
}

/* 复选框 */
.page-section {
  background-color: rgb(145, 68, 68);
  padding: 35rpx;
  width: 100%;
  
}
.weui-cell {
  display: flex;
  flex-direction: row;
  line-height: 80rpx;
  width: 100%;
  background-color: #eee;
  padding: 0 35rpx;
  box-sizing: border-box;
  border: 1rpx solid rgb(180, 180, 180);
}

/* 折叠 */
.fold {
  width: 100%;
  display: flex;
  flex-direction: column;
  margin-bottom: 10rpx;
}
.li {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.li2 {
  width: 100%;
}

.cd {
  display: flex;
  flex-direction: column;
}
.cd view {
  width: 100%;
  text-align: left;
}
textarea {
  margin: 25rpx 0;
  width: 100%;
  border: 1rpx solid #444;
  padding: 25rpx;
  font-size: 38rpx;
  box-sizing: border-box;
}