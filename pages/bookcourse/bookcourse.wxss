
swiper,swiper-item {
  background-color: #fafafa;
  height: 1000rpx;
}
.swiper-tab{
  width: 100%;
  border-bottom: 5rpx solid #eee;
  text-align: center;
  height: 90rpx;
  line-height: 90rpx;
  display: flex;
  flex-flow: row;
  font-size: 32rpx;
  justify-content: space-between;
}
.swiper-tab-item{
  width: 50%; 
  color:#434343;
}
.active{
color:#434343;
border-bottom: 2rpx solid #434343;
font-weight: 700;
}
.block1{
width: 100%;
display: flex;
position: relative;
}
.block1 {
  background-color: #bfa;
  border-bottom: 30rpx solid #eee;
}
.block1 {
  width: 100%;
  display: flex;
  flex-direction: row;
  padding: 30rpx 28rpx;
  box-sizing: border-box;
  background-color: #fff;
}
.block-left {
  height: 200rpx;
}
.block-left image {
  width: 200rpx;
  height: 200rpx;
  margin-right: 25rpx;
  border-radius: 20rpx;
}
.block-right {
  width: 100%;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.row,.row view {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  
}
.row view {
  display: flex;
  flex-direction: row;
}
.block-title {
  font-size: 35rpx;
  font-weight: 700;
}
.block-time {
  color: #fff;
  background-color: #666666;
  padding: 0 5rpx;
  margin-right: 25rpx;
}